{
    "properties": {
        "displayName": "Deploy a Resource Guard association for Recovery Services Vault",
        "policyType": "Custom",
        "description": "Deploy a Resource Guard Proxy for Recovery Services Vault, securing sensitive vault operations by requiring the requesting identity to have permissions to both the vault and the Resource Guard",
        "metadata": {
            "version": "1.0.0",
            "category": "Backup"
        },
        "version": "1.0.0",
        "parameters": {
            "resourceGuardResourceId": {
                "type": "String",
                "metadata": {
                    "displayName": "Resource Guard ID",
                    "description": "The resource ID of the Resource Guard to be associated with the Vault"
                }
            },
            "tagName": {
                "type": "String",
                "metadata": {
                    "displayName": "Exclusion Tag Name",
                    "description": "Name of the tag to use for excluding vaults from this policy. This should be used along with the Exclusion Tag Value parameter."
                },
                "defaultValue": ""
            },
            "tagValue": {
                "type": "String",
                "metadata": {
                    "displayName": "Exclusion Tag Value",
                    "description": "Value of the tag to use for excluding vaults from this policy. This should be used along with the Exclusion Tag Name parameter."
                },
                "defaultValue": ""
            }
        },
        "policyRule": {
            "if": {
                "allof": [
                    {
                        "field": "type",
                        "equals": "Microsoft.RecoveryServices/vaults"
                    },
                    {
                        "not": {
                            "field": "[concat('tags[',parameters('tagName'), ']')]",
                            "equals": "[parameters('tagValue')]"
                        }
                    }
                ]
            },
            "then": {
                "effect": "deployIfNotExists",
                "details": {
                    "type": "Microsoft.RecoveryServices/vaults/backupResourceGuardProxies",
                    "roleDefinitionIds": [
                        "/providers/microsoft.authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
                    ],
                    "existanceCondition": {},
                    "deployment": {
                        "properties": {
                            "mode": "incremental",
                            "template": {
                                "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                                "contentVersion": "1.0.0.0",
                                "parameters": {
                                    "vaultName": {
                                        "type": "string"
                                    },
                                    "resourceGuardResourceId": {
                                        "type": "string"
                                    }
                                },
                                "variables": {},
                                "resources": [
                                    {
                                        "type": "Microsoft.RecoveryServices/vaults/backupResourceGuardProxies",
                                        "apiVersion": "2023-06-01",
                                        "name": "[concat(parameters('vaultName'), '/', 'VaultProxy')]",
                                        "dependsOn": [],
                                        "properties": {
                                            "resourceGuardResourceId": "[parameters('resourceGuardResourceId')]"
                                        }
                                    }
                                ],
                                "outputs": {
                                    "policy": {
                                        "type": "string",
                                        "value": "[concat(parameters('resourceGuardResourceId'), 'configured for resource guard ', ': ', parameters('vaultName'))]"
                                    }
                                }
                            },
                            "parameters": {
                                "resourceGuardResourceId": {
                                    "value": "[parameters('resourceGuardResourceId')]"
                                },
                                "vaultName": {
                                    "value": "[field('name')]"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "id": "/providers/Microsoft.Authorization/policyDefinitions/791c6a5d-6860-430c-9038-0a7e04c07bbf",
    "name": "791c6a5d-6860-430c-9038-0a7e04c07bbf"
}